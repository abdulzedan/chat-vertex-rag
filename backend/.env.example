# Required - Google Cloud Configuration
GCP_PROJECT_ID=your-project-id
GCP_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Vertex AI Search Configuration
VERTEX_SEARCH_DATASTORE_ID=rag-demo-datastore
VERTEX_SEARCH_APP_ID=rag-demo-app

# Model Configuration
GEMINI_MODEL=gemini-2.0-flash-001
FALLBACK_MODELS=gemini-1.5-flash,gemini-1.5-pro

# Optional Feature Flags (set to true for better quality, but higher cost)
USE_DOCUMENT_AI=false       # Enable for advanced PDF processing with table extraction
DOCAI_LOCATION=us           # Document AI location (if USE_DOCUMENT_AI=true)
USE_VERTEX_RANKING=false    # Enable for better search result ranking
USE_VERTEX_GROUNDING=false  # Enable for response validation and fact-checking